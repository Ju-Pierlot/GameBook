<UserControl x:Class="GameBook.Views.UserControls.UCParagraphsBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=ParagraphsBoxVM}">
    <ComboBox SelectedItem="{Binding ParagraphSelected}" ItemsSource="{Binding ParagraphVisited}" Height="30" Width="500" HorizontalAlignment="Right" Margin="0 0 30 0" FontFamily="Cambria" FontSize="14 pt" Foreground="#777" Cursor="Hand"/>
</UserControl>
